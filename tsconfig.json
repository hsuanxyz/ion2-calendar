{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "lazyload-demo",
    "dist",
    "demo",
    "src",
    "aot"
  ],
  "include": [
    "_temp/**/*"
  ],
  "angularCompilerOptions": {
    "genDir": "aot"
  }
}
